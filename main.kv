<MainScreen>:
    #: import time __main__.time
    counter_button : test_button
    twice_signal : twice_signal
    your_mom: your_mom
    hello_world: hello_world
    x_axis_button: x_axis_button
    y_axis_button: y_axis_button
    button_combo_check: button_combo_check

    name: 'main'
    on_enter:root.start_joy_thread()
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: test_button
        text: "0"
        size: 100, 100
        x: root.width * 0.75
        y: root.height * 0.5
        on_press: root.btn()
        color: .3, .1, .2, 1

    DPEAButton:
        text: "test2"
        size: 100, 100
        x: root.width * 0.25
        y: root.height * 0.5
        color: .8, .2, .7, 1
        on_press: root.pressed()


    DPEAButton:
        text: "test3"
        size: 100, 100
        x: root.width * 0.45
        y: root.height * 0.5
        color: .1, .7, .6, 1
        id: btn
        text: "ON" if btn.state == "normal" else "OFF"

    DPEAButton:
        id : label_button
        text: "click"
        size: 100, 100
        x: root.width * 0.1
        y: root.height * 0.5
        color: .4, .4, .9, 1
        on_press: root.twice()

    ImageButton:
        text: "no"
        size: 200, 200
        x: root.width * 0.45
        y: root.height * 0.7
        source: 'unnamed.jpg'
        on_press: root.baka()


    Label:
        id: twice_signal
        size_hint: None, None
        font_size: 30
        text : "sus"
        center_x: root.width * 0.5
        center_y: root.height * 0.2
        color: 1, 1, 1, 1
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0

    Label:
        id: hello_world
        size_hint: None, None
        font_size: 30
        text : "isabella"
        center_x: root.width * 0.7
        center_y: root.height * 0.2
        color: 1, 1, 1, 1
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0

    Label:
        id: your_mom
        size_hint: None, None
        font_size: 30
        text : "lol"
        center_x: root.width * 0.2
        center_y: root.height * 0.2
        color: 1, 1, 1, 1
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0

    Label:
        id: x_axis_button
        size_hint: None, None
        font_size: 30
        text : "x"
        center_x: root.width * 0.9
        center_y: root.height * 0.2
        color: 1, 1, 1, 1
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0

    Label:
        id: y_axis_button
        size_hint: None, None
        font_size: 30
        text : "y"
        center_x: root.width * 0.9
        center_y: root.height * 0.3
        color: 1, 1, 1, 1
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0



    Label:
        id: button_combo_check
        size_hint: None, None
        font_size: 30
        text : "no"
        center_x: root.width * 0.2
        center_y: root.height * 0.9
        color: 1, 1, 1, 1
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0

    Slider:
        id: slider
        size_hint: 1,.2
        min: 0
        max: 100
        step: 1
        orientation: 'horizontal'

    Label:
        text: str(slider.value)
        color: 139, 0, 0
        center_y: root.height * -0.1
        font_size: 34

    ImageButton:
        id: mike_button
        size: 100, 100
        x: root.width * 0.8
        y: root.height * 0.8
        source: 'mike.jpg'
        on_release: root.animate_it(self)




